{
  "languageserver": {
    /* dotnet tool install --global csharp-ls */
    "csharp": {
      "command": "csharp-ls",
      "rootPatterns": ["*.sln", "git"],
      "filetypes": ["cs", "csharp"]
    }
  },
  "coc.preferences.extensionUpdateCheck": "daily",

  /* Coc List */
  "list.height": 25,
  "list.normalMappings": {
    "t": "action:tabe",
    "v": "action:vsplit",
    "s": "action:split",
    "<C-j>": "do:next",
    "<C-k>": "do:previous",
    "d": "expr:GetDeleteAction"
  },
  "list.insertMappings": {
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-u>": "feedkeys:\\<C-u>",
    "<C-d>": "feedkeys:\\<C-d>"
  },

  /* completion settings */
  "suggest.noselect": true,
  "coc.source.around.enable": true,
  "coc.source.buffer.enable": true,
  "coc.source.file.enable": false,
  "coc.source.tag.enable": true,

  "coc.source.around.priority": 30,
  "coc.source.buffer.priority": 20,
  "coc.source.tag.priority": 10,

  "coc.source.around.shortcut": "Around",
  "coc.source.buffer.shortcut": "Buffer",
  "coc.source.file.shortcut": "File",
  "coc.source.tag.shortcut": "Tag",
  "coc.source.word.shortcut": "Dict",

  /* diagnostic settings */
  "diagnostic.messageTarget": "float",
  "diagnostic.checkCurrentLine": false,
  "suggest.maxCompleteItemCount": 25,
  "suggest.minTriggerInputLength": 2,

  /* coc-solargraph */
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "solargraph.promptDownload": true,
  "solargraph.checkGemVersion": false,

  /* coc-eslint */
  "eslint.autoFixOnSave": false,
  "eslint.run": "onSave",

  /* coc-yaml */
  "yaml.format.enable": true,

  /* coc-tsserver */
  "javascript.suggestionActions.enabled": false,
  "typescript.suggestionActions.enabled": false,

  /* coc-prettier */
  "prettier.statusItemText": "",

  /* coc-spell-check */
  "cSpell.language": "en",
  "cSpell.enabledLanguageIds": ["markdown"],

  /* coc-sql */
  "sql.database": "postgresql",
  "sql.formatOptions": {
    "language": "postgresql"
  },

  "snippets.ultisnips.pythonPrompt": false
}
