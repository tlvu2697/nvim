{
  "languageserver": {},
  "coc.preferences.extensionUpdateCheck": "daily",
  "list.normalMappings": {
    "v": "action:vsplit",
    "s": "action:split"
  },

  /* completion settings */
  "coc.source.file.enable": false,
  "coc.source.around.enable": true,
  "coc.source.buffer.enable": true,
  "coc.source.tag.enable": true,

  "coc.source.around.priority": 30,
  "coc.source.buffer.priority": 20,
  "coc.source.tag.priority": 10,

  /* diagnostic settings */
  "diagnostic.messageTarget": "echo",
  "diagnostic.checkCurrentLine": false,
  "suggest.maxCompleteItemCount": 25,
  "suggest.minTriggerInputLength": 2,

  /* coc-solargraph */
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "solargraph.promptDownload": false,
  "solargraph.checkGemVersion": true,
  "solargraph.symbols": false,

  /* coc-eslint */
  "eslint.autoFixOnSave": true,
  "eslint.run": "onSave",

  /* coc-yaml */
  "yaml.format.enable": true,

  /* coc-tsserver */
  "javascript.suggestionActions.enabled": false,
  "typescript.suggestionActions.enabled": false,

  /* coc-markdownlint */
  "markdownlint.config": {
    "line-length": false,
    "indentation": 2
  },

  /* coc-spell-check */
  "cSpell.language": "en",
  "cSpell.enabledLanguageIds": ["markdown"]
}
