{
  "languageserver": {},

  "coc.preferences.extensionUpdateCheck": "daily",

  "coc.source.file.enable": false,
  "coc.source.around.enable": true,
  "coc.source.buffer.enable": true,
  "coc.source.tag.enable": true,

  "coc.source.around.priority": 30,
  "coc.source.buffer.priority": 20,
  "coc.source.tag.priority": 10,

  "list.normalMappings": {
    "v": "action:vsplit",
    "s": "action:split"
  },

  "diagnostic.messageTarget": "echo",
  "diagnostic.checkCurrentLine": false,
  "suggest.maxCompleteItemCount": 25,
  "suggest.minTriggerInputLength": 2,

  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "solargraph.promptDownload": false,
  "solargraph.checkGemVersion": true,
  "solargraph.symbols": false,

  "eslint.autoFixOnSave": true,
  "eslint.run": "onSave",

  "yaml.format.enable": true,

  "javascript.suggestionActions.enabled": false,
  "typescript.suggestionActions.enabled": false,

  "markdownlint.config": {
    "line-length": false,
    "indentation": 2
  }
}
